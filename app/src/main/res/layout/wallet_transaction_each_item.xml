<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <TextView
            android:id="@+id/transactionModeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Call"
            android:textColor="@color/mainText"
            android:textSize="14sp"
            android:fontFamily="@font/segoe_ui_bold"/>
        <TextView
            android:id="@+id/transactionIdTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TransactionId"
            android:layout_marginTop="2dp"
            android:textColor="@color/mainText"
            android:textSize="12sp"
            android:layout_below="@id/transactionModeTV"
            android:fontFamily="@font/segoe_ui"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/transactionDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction Date"
            android:textColor="@color/greyText"
            android:textSize="14sp"
            android:fontFamily="@font/segoe_ui"/>
            <TextView
                android:id="@+id/transactionTimeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TransTime"
                android:layout_marginStart="5dp"
                android:textColor="@color/greyText"
                android:textSize="14sp"
                android:fontFamily="@font/segoe_ui"/>
        </LinearLayout>

        <TextView
            android:id="@+id/transactionAmountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+â‚¹ 1000"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/segoe_ui_bold"/>
        <TextView
            android:id="@+id/durationTV"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="34:34s"
            android:textColor="@color/greyText"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/segoe_ui_bold"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>